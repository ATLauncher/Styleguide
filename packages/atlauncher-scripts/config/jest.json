{
  "bail": true,
  "testEnvironment": "node",
  "collectCoverageFrom": ["<rootDir>/**/*.js"],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  },
  "testMatch": ["<rootDir>/**/__tests__/**/*.js"]
}

{
  "bail": true,
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "src/**/*.js"
  ],
  "coverageDirectory": "coverage",
  "coverageThreshold": {
    "global": {
        "branches": 50,
        "functions": 50,
        "lines": 50,
        "statements": 50
    }
  },
  "testMatch": [
    "**/?(*.)(spec).js"
  ]
}
